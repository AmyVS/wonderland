<% content_for(:title,  "#{@station.name} | Wonderland") %>

<h1><%= @station.name %> Station</h1>

<p>Here are all of the lines available for <%= @station.name %> Station:</p>
<ul><% @station.lines.each do |line| %>
  <li><%= link_to "#{line.name}", line_path(line) %></li>
<% end %>
</ul>

<div class='lower-link'>
  <%= link_to "Click here to see all stations", stations_path %> |
  <%= link_to "Click to create a new stop", new_stop_path %> |
  <%= link_to "Click here to make a new station", new_station_path %>
</div>
